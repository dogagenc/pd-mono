{
  "name": "products-database-api",
  "version": "0.1.0",
  "description": "Products Database API using TypeScript, Node.js, MongoDB",
  "scripts": {
    "clean": "rimraf '{src,test}/**/*.{js,js.map}'",
    "clean:dist": "rimraf dist",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "build": "yarn clean:dist && yarn tsc",
    "tsc": "tsc --project tsconfig.json",
    "tsc:w": "tsc --project tsconfig.json -w",
    "start": "nodemon --watch \"src/**/*.ts\" --ignore \"node_modules/**/*\" --exec ts-node src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "docker:build": "yarn build && docker-compose build",
    "deploy": "exit 0"
  },
  "author": "Doga Genc <dogagenc@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@tsed/common": "5.43.0",
    "@tsed/core": "5.43.0",
    "@tsed/di": "5.43.0",
    "@tsed/mongoose": "5.43.0",
    "@tsed/swagger": "5.43.0",
    "@types/swagger-schema-official": "2.0.20",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.4",
    "cors": "^2.8.5",
    "cross-env": "6.0.3",
    "exact-math": "^2.1.2",
    "express": "4.17.1",
    "express-session": "1.17.0",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mongoose": "5.7.11",
    "mongoose-paginate-v2": "^1.3.6",
    "multer": "^1.4.2",
    "serve-static": "^1.13.1",
    "tiny-async-pool": "^1.1.0",
    "ts-express-decorators": "^5.44.4",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/http-proxy": "^1.17.1",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "5.5.32",
    "@types/multer": "^1.4.2",
    "@types/node": "12.12.9",
    "@types/request-promise": "^4.1.42",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "1.19.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-node": "8.5.2",
    "typescript": "3.7.5"
  }
}
